<?xml version="1.0" encoding="utf-8"?>
<xs:schema targetNamespace="urn:didata.com:api:cloud:types"
           xmlns:cloudapi="urn:didata.com:api:cloud:types"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified"
           xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
           jaxb:version="1.0">

    <xs:element name="response" type="cloudapi:ResponseType"/>

    <xs:complexType name="ResponseType">
        <xs:sequence>
            <xs:element name="operation" type="xs:string"/>
            <xs:element name="responseCode" type="xs:string"/>
            <xs:element name="message" type="xs:string"/>
            <xs:element name="info" type="cloudapi:NameValuePairType" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element name="warning" type="cloudapi:NameValuePairType" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element name="error" type="cloudapi:NameValuePairType" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="requestId" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="NameValuePairType">
        <xs:attribute name="name" type="xs:string" use="required"/>
        <xs:attribute name="value" type="xs:string" use="required"/>
    </xs:complexType>

    <!-- Note: this group is commonly applicable across all successful paged list responses. Refer to the API 2.0
    documentation for details about Paging and Filtering behaviour -->
    <xs:attributeGroup name="PagedResultAttributes">
        <xs:attribute name="pageNumber" type="xs:int"/>
        <xs:attribute name="pageCount" type="xs:int"/>
        <xs:attribute name="totalCount" type="xs:int"/>
        <xs:attribute name="pageSize" type="xs:int"/>
    </xs:attributeGroup>

    <xs:complexType name="IdType">
        <xs:attribute name="id" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="ProgressType">
        <xs:sequence>
            <xs:element name="action" type="xs:string"/>
            <xs:element name="requestTime" type="xs:dateTime"/>
            <xs:element name="userName" type="xs:string"/>
            <xs:element name="status" type="xs:string" minOccurs="0"/>
            <xs:element name="numberOfSteps" type="xs:int" minOccurs="0"/>
            <xs:element name="updateTime" type="xs:dateTime" minOccurs="0"/>
            <xs:element name="step" type="cloudapi:ProgressStepType" minOccurs="0"/>
            <xs:element name="failureReason" type="xs:string" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="ProgressStepType">
        <xs:sequence>
            <xs:element name="name" type="xs:string"/>
            <xs:element name="number" type="xs:int"/>
            <xs:element name="percentComplete" type="xs:int" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="IpRangeCidrType">
        <xs:attribute name="address" type="xs:string" use="required"/>
        <xs:attribute name="prefixSize" type="xs:int" use="required"/>
    </xs:complexType>

    <xs:complexType name="OperatingSystemType">
        <xs:attribute name="id" type="xs:string" use="required"/>
        <xs:attribute name="displayName" type="xs:string" use="required"/>
        <xs:attribute name="family" type="xs:string" use="required"/>
        <xs:attribute name="osUnitsGroupId" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="PropertyType">
        <xs:attribute name="name" type="xs:string" use="required"/>
        <xs:attribute name="value" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="IdAndNameType">
        <xs:attribute name="id" type="xs:string" use="required"/>
        <xs:attribute name="name" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="VirtualHardwareType">
        <xs:attribute name="version" type="xs:string" use="required"/>
        <xs:attribute name="upToDate" type="xs:boolean" use="required"/>
    </xs:complexType>

    <xs:complexType name="CpuType">
        <xs:attribute name="count" type="xs:unsignedInt" use="required"/>
        <xs:attribute name="speed" type="xs:string" use="required"/>
        <xs:attribute name="coresPerSocket" type="xs:unsignedInt" use="required"/>
    </xs:complexType>

    <xs:complexType name="DiskType">
        <xs:attribute name="id" type="xs:string" use="required"/>
        <xs:attribute name="scsiId" type="xs:int" use="required"/>
        <xs:attribute name="sizeGb" type="xs:int" use="required"/>
        <xs:attribute name="speed" type="xs:string" use="required"/>
        <xs:attribute name="state" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="IpAddressListSummaryType">
        <xs:attribute name="id" type="xs:string" use="required"/>
        <xs:attribute name="name" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="PortListSummaryType">
        <xs:attribute name="id" type="xs:string" use="required"/>
        <xs:attribute name="name" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="PortRangeType">
        <xs:attribute name="begin" type="xs:unsignedShort" use="required"/>
        <!-- if end is present, it implies a port range -->
        <xs:attribute name="end" type="xs:unsignedShort"/>
    </xs:complexType>

    <xs:complexType name="EmailConfigurationType">
        <xs:sequence>
            <xs:element name="body" type="xs:string"/>
            <xs:element name="htmlBody" type="xs:string" minOccurs="0"/>
            <xs:element name="from" type="xs:string"/>
            <xs:element name="subject" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="UrlType">
        <xs:sequence>
            <xs:element name="label" type="xs:string"/>
            <xs:element name="url" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>

    <xs:simpleType name="StringListType">
        <xs:list itemType="xs:string"/>
    </xs:simpleType>

    <xs:complexType name="ClusterType">
        <xs:attribute name="id" type="xs:string" use="required"/>
        <xs:attribute name="name" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="ApplyTagByIdType">
        <xs:sequence>
            <xs:element name="tagKeyId" type="xs:string"/>
            <xs:element name="value" type="xs:string" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="ApplyTagType">
        <xs:sequence>
            <xs:element name="tagKeyName" type="xs:string"/>
            <xs:element name="value" type="xs:string" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="TagWithIdAndNameType">
        <xs:sequence>
            <xs:element name="tagKeyName" type="xs:string"/>
            <xs:element name="value" type="xs:string" minOccurs="0"/>
        </xs:sequence>
        <xs:attribute name="tagKeyId" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:group name="TagGroup">
        <xs:choice>
            <xs:element name="tagById" type="cloudapi:ApplyTagByIdType" maxOccurs="unbounded"/>
            <xs:element name="tag" type="cloudapi:ApplyTagType" maxOccurs="unbounded"/>
        </xs:choice>
    </xs:group>

    <xs:complexType name="GuestType">
        <xs:sequence>
            <xs:element name="operatingSystem" type="cloudapi:OperatingSystemType"/>
            <xs:element name="vmTools" type="cloudapi:VmToolsType" minOccurs="0"/>
        </xs:sequence>

        <xs:attribute name="osCustomization" type="xs:boolean" use="required"/>
    </xs:complexType>

    <xs:complexType name="VmToolsType">
        <xs:attribute name="type" type="xs:string" use="required"/>
        <xs:attribute name="versionStatus" type="xs:string"/>
        <xs:attribute name="runningStatus" type="xs:string"/>
        <xs:attribute name="apiVersion" type="xs:int"/>
    </xs:complexType>

    <xs:attributeGroup name="StorageControllerAttributeGroup">
        <xs:attribute name="id" type="xs:string" use="required"/>
        <xs:attribute name="adapterType" type="xs:string" use="required"/>
        <xs:attribute name="key" type="xs:int"/>
    </xs:attributeGroup>

    <xs:attributeGroup name="StorageControllerDeviceAttributeGroup">
        <xs:attribute name="id" type="xs:string" use="required"/>
        <xs:attribute name="type" type="xs:string" use="required"/>
        <xs:attribute name="sizeGb" type="xs:int"/>
        <xs:attribute name="fileName" type="xs:string"/>
    </xs:attributeGroup>

    <xs:attributeGroup name="StorageControllerDiskAttributeGroup">
        <xs:attribute name="id" type="xs:string" use="required"/>
        <xs:attribute name="sizeGb" type="xs:int" use="required"/>
        <xs:attribute name="speed" type="xs:string" use="required"/>
        <xs:attribute name="iops" type="xs:int"/>
    </xs:attributeGroup>

    <xs:attributeGroup name="FloppyAttributeGroup">
        <xs:attribute name="id" type="xs:string" use="required"/>
        <xs:attribute name="driveNumber" type="xs:int" use="required"/>
        <xs:attribute name="key" type="xs:int"/>
        <xs:attribute name="sizeGb" type="xs:int"/>
        <xs:attribute name="fileName" type="xs:string"/>
    </xs:attributeGroup>

    <xs:complexType name="ServerIdType">
        <xs:attribute name="serverId" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:simpleType name="DayOfWeekType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="SUNDAY"/>
            <xs:enumeration value="MONDAY"/>
            <xs:enumeration value="TUESDAY"/>
            <xs:enumeration value="WEDNESDAY"/>
            <xs:enumeration value="THURSDAY"/>
            <xs:enumeration value="FRIDAY"/>
            <xs:enumeration value="SATURDAY"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="HourOfDayType">
        <xs:restriction base="xs:nonNegativeInteger">
            <xs:minInclusive value="0"/>
            <xs:maxInclusive value="23"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType name="EmptyType"/>

</xs:schema>
